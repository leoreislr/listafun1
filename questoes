#include <stdio.h>
#include <stdlib.h>

//Questao 01

int soma(int a,int b){
int resul;

 resul = a + b;
 return resul;

}


int main()
{
    int x, y, resultado;

    printf("Informe o 1 numero\n");
    scanf("%d", &x);
    printf("Informe o 2 numero\n");
    scanf("%d", &y);

    resultado = soma(x,y);
    printf("O resultado e = %d\n",resultado);

}

//Questao 02

#include <stdio.h>
#include <stdlib.h>

int subtrai(int a,int b, int c)
{
 int resul;

 resul = (a-b)-c;
 return resul;
}

int main()
{
    int x, y,z, resultado;

    printf("Informe o 1 numero\n");
    scanf("%d", &x);
    printf("Informe o 2 numero\n");
    scanf("%d", &y);
    printf("Informe o 3 numero\n");
    scanf("%d", &z);

    resultado = subtrai(x,y,z);
    printf("O resultado e = %d\n",resultado);

}

//Questao 03

int fator(){

 int res,fatorial,i;
 scanf("%d", &i);

 if( i >= 0){
    for(fatorial =1; i>1; i = i-1)

    fatorial = (fatorial*i);
    res = fatorial;
    }

 else{
    printf("ERRO - VALOR INVALIDO\n\n");
    return -1 ;// -1 = ERRO
 }
return res;

}

int main()
{

   int result,fatorial,i;

    printf("Insira o valor para encontrar o fatorial do mesmo: \n");


    result = fator(fatorial,i);
    printf("o fatorial do numero e : %d", result);

    return 0;
}


